<odoo>

    <!-- Action -->
    <record id="action_chick_production" model="ir.actions.act_window">
        <field name="name">Chick Production</field>
        <field name="res_model">chick.production</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View -->
    <record id="view_chick_production_tree" model="ir.ui.view">
        <field name="name">chick.production.tree</field>
        <field name="model">chick.production</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="phase_id"/>
                <field name="estimated_end_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_chick_production_form" model="ir.ui.view">
        <field name="name">chick.production.form</field>
        <field name="model">chick.production</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_produce" type="object" string="Produce"/>
                    <button name="action_loss" type="object" string="Loss"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="start_date"/>
                            <field name="phase_id"/>
                            <field name="estimated_end_date" readonly="1"/>
                            <field name="building_id"/>
                            <field name="day"/>
                            <field name="week"/>
                        </group>
                        <group>
                            <field name="import_folder"/>
                            <field name="reception_date" invisible="1"/>
                            <field name="male_quantity"/>
                            <field name="female_quantity"/>
                            <field name="quantity_male_remaining" readonly="1"/>
                            <field name="quantity_female_remaining" readonly="1"/>
                            <field name="male_mortality_rate" readonly="1"/>
                            <field name="female_mortality_rate" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Real Consumption">
                            <field name="real_consumption_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity_per_unit"/>
                                    <field name="uom_id" domain="[('category_id', '=', product_category_id)]"/>
                                    <field name="product_category_id" column_invisible="1"/>
                                    <field name="total_quantity"/>
                                    <field name="lot_id" required="tracking != 'none'"/>
                                    <field name="cost"/>
                                    <field name="date"/>
                                    <field name="gender"/>
                                    <field name="tracking" column_invisible="1"/>
                                    <field name="is_confirmed" column_invisible="1"/>
                                    <button string="Confirm Consumptions"
                                            type="object"
                                            name="action_confirm_consumption"
                                            invisible="is_confirmed == True"
                                            class="btn-primary"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ã‰quipements" name="equipments">
                            <field name="equipment_ids">
                                <tree editable="bottom">
                                    <field name="equipment_id"/>
                                    <field name="duration"/>
                                    <field name="uom_id"/>
                                    <field name="date"/>
                                    <field name="cost" sum="Total"/>
                                    <field name="is_confirmed" column_invisible="1"/>

                                    <button string="Confirm"
                                            type="object"
                                            name="button_confirm"
                                            invisible="is_confirmed == True"
                                            class="btn-primary"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Weight">
                            <field name="weight_record_ids">
                                <tree editable="bottom">
                                    <field name="gender_animal" required="1"/>
                                    <field name="initial_weight"/>
                                    <field name="average_current_weight" required="1"/>
                                    <field name="date" required="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Costs">
                            <group>
                                <field name="total_cost" readonly="1"/>
                                <field name="total_male_cost" readonly="1"/>
                                <field name="total_female_cost" readonly="1"/>
                                <field name="actual_male_cost" readonly="1"/>
                                <field name="actual_female_cost" readonly="1"/>
                            </group>
                            <field name="cost_ids">
                                <tree>
                                    <field name="type"/>
                                    <field name="name"/>
                                    <field name="resource"/>
                                    <field name="date"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Declaration">
                            <field name="product_declaration_ids">
                                <tree create="0">
                                    <field name="product_id"/>
                                    <field name="product_to_consume_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="gender"/>
                                    <field name="lot_id" readonly="1"/>
                                    <field name="cost" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Loss">
                            <field name="product_loss_ids">
                                <tree create="0">
                                    <field name="product_to_consume_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="gender"/>
                                    <field name="initial_lot_id"/>
                                    <field name="cost" readonly="1"/>
                                </tree>
                            </field>
                        </page>


                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
