<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='ref']" position="after">
                <field name="is_import_folder" invisible="move_type != 'in_invoice'" groups="import_folder.group_import_folder"/>
                <field name="import_folder_id" required="is_import_folder" invisible="not is_import_folder" groups="import_folder.group_import_folder"/>
                <field name="invoice_import_type" required="is_import_folder" invisible="not is_import_folder" groups="import_folder.group_import_folder"/>
            </xpath>
            
        </field>
    </record>
</odoo>